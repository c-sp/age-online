{
  "extends": "../tsconfig",
  "compilerOptions": {
    // TODO "toggle" path mappings: yes for "next dev", no for "next build"
    // "paths": {},
    // compiler options set by Next.js
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  // include/exclude set by Next.js
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
